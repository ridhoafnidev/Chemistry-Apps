<?xml version="1.0" encoding="utf-8"?>
<com.example.appskimia.ui.CustomRadioGroup
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container_custom"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:id="@+id/first_question"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            style="@style/Text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="16dp"
            android:paddingBottom="16dp"
            android:text="1."
            app:layout_constraintTop_toTopOf="parent" />
        <TextView
            style="@style/Text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="16dp"
            android:text="Garam dari NH4Cl ini bersifat asam, disebab kan kerena tersusun atas?"
            app:layout_constraintTop_toTopOf="parent" />
    </LinearLayout>

    <com.example.appskimia.ui.radiobutton.types.TwoFieldsCustomRadioButton
        android:id="@+id/rb_jawaban_a"
        android:layout_width="match_parent"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_height="70dp"
        android:background="@drawable/background_custom_radio_buttons_unselected_state"
        app:description_rb_two_fields="Garam yang tersusun dari asam kuat dan basa lemah."
        app:layout_constraintTop_toBottomOf="@+id/first_question"
        app:title_rb_two_fields="A." />

    <com.example.appskimia.ui.radiobutton.types.TwoFieldsCustomRadioButton
        android:id="@+id/rb_jawaban_b"
        android:layout_width="match_parent"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="8dp"
        android:layout_height="70dp"
        android:background="@drawable/background_custom_radio_buttons_unselected_state"
        app:description_rb_two_fields="Garam yang tersusun dari asam kuat dan basa kuat."
        app:layout_constraintTop_toBottomOf="@+id/rb_jawaban_a"
        app:title_rb_two_fields="B." />

    <com.example.appskimia.ui.radiobutton.types.TwoFieldsCustomRadioButton
        android:id="@+id/rb_jawaban_c"
        android:layout_width="match_parent"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="8dp"
        android:layout_height="70dp"
        android:background="@drawable/background_custom_radio_buttons_unselected_state"
        app:description_rb_two_fields="Garam yang tersusun dari asam lemah dan basa kuat."
        app:layout_constraintTop_toBottomOf="@+id/rb_jawaban_b"
        app:title_rb_two_fields="C." />

    <com.example.appskimia.ui.radiobutton.types.TwoFieldsCustomRadioButton
        android:id="@+id/rb_jawaban_d"
        android:layout_width="match_parent"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="8dp"
        android:layout_height="70dp"
        android:background="@drawable/background_custom_radio_buttons_unselected_state"
        app:description_rb_two_fields="Garam yang tersusun dari asam lemah dan basa lemah."
        app:layout_constraintTop_toBottomOf="@+id/rb_jawaban_c"
        app:title_rb_two_fields="D." />


</com.example.appskimia.ui.CustomRadioGroup>